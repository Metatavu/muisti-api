            </column>
            <column name="exhibition_id" type="binary(16)">
                <constraints nullable="false" foreignKeyName="FK_EXHIBITION_DEVICE_GROUP_EXHIBITION_ID" referencedColumnNames="id" referencedTableName="exhibition"/>
